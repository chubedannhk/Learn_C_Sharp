<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>nguyenhoangkhai</title>
    <style>
        .btn {
            padding: 12px;
            color: white;
            background-color: black;
            margin: 20px;
        }
    </style>
</head>
<body>

    <div class="container mt-3">
        <h2 align="center">History Of Account</h2>
        <p align="center">Where to store your transaction history</p>

        <input type="hidden" value="@ViewBag.accid" />
        <div align="center">
            
            <a asp-controller="home" asp-action="recharge" asp-route-id="@ViewBag.accid" style="color:white">
                <button class="btn">
                    Recharge History
                </button>
            </a>
            
            
            <a asp-controller="home" asp-action="draw" asp-route-id="@ViewBag.accid">
                <button class="btn">
                    Withdrawal history
                </button>
            </a>
          
        </div>
        <div align="center">
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th>Transaction ID</th>
                        <th>
                            Transaction Money - Send
                        </th>
                        <th>Transaction Date</th>
                    </tr>
                </thead>
                <tbody>

                    @if (ViewBag.Transactions != null)
                    {
                        @foreach (var transaction in ViewBag.Transactions)
                        {
                            <tr>
                                <td>@transaction.TransId</td>
                                <td>@transaction.TransMonry  <i> VND</i></td>
                                <td>@transaction.DateOfTrans</td>
                            </tr>
                        }
                    }else
                    {
                        <span>Not Found</span>
                    }
                    


                </tbody>
            </table>
        </div>
        <div align="center">
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th>Transaction ID</th>
                        <th>Trading Money - Withdraw</th>
                        <th>Transaction Date</th>
                    </tr>
                </thead>
                <tbody>

                    @if (ViewBag.Transactionsdraw != null)
                    {
                        @foreach (var transactions in ViewBag.Transactionsdraw)
                        {
                            <tr>
                                <td>@transactions.TransId</td>
                                <td>@transactions.TransMonry <i> VND</i></td>
                                <td>@transactions.DateOfTrans</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <span>Not Found</span>
                    }



                </tbody>
            </table>
        </div>
        <p align="center">
            <a asp-controller="home" asp-action="index" asp-route-username="@ViewBag.username">
                Back To Home
            </a>

        </p>

</body>
</html>

