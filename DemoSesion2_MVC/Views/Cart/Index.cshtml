<a asp-controller="product" asp-action="index">Back</a>

<h2>Cart</h2>

<table border="1" width="600px">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Photo</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Sub Total</th>

    </tr>
    @foreach (var item in ViewBag.cart)
    {
        <tr>
            <td>@item.Product.Id</td>
            <td>@item.Product.Name</td>
            <td>
                <a asp-controller="product" asp-action="details" asp-route-id="@item.Product.Id"> <img src="~/images/@item.Product.Photo" width="50" height="65" /></a>
            </td>
            <td>@item.Product.Price</td>
            <td>@item.Quantity</td>
            <td>
                @(item.Product.Price * item.Quantity)
            </td>


        </tr>
    }
</table>