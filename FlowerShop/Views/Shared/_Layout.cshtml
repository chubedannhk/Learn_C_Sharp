
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=windows-1252" />
    <title>Flower Shop</title>

    <link rel="stylesheet" type="text/css" href="~/user/css/style.css" />

</head>

<body>

    <div id="wrap">

        <div class="header">
            <div class="logo">
                <a asp-controller="home" asp-action="index">
                    <img src="~/user/images/logo.gif" alt="" title="" border="0" />
                </a>
            </div>
            <div id="menu">
                <ul>
                    <li class="selected"><a asp-controller="home" asp-action="index">home</a></li>
                    <li><a asp-controller="about" asp-action="index">about us</a></li>
                    <li><a asp-controller="product" asp-action="flower">flowers</a></li>
                    <li><a asp-controller="product" asp-action="gift">specials gifts</a></li>
                    <li><a  asp-controller="account" asp-action="login">my accout</a></li>
                    <li><a asp-controller="account" asp-action="register">register</a></li>
                    <li><a asp-controller="product" asp-action="price">prices</a></li>
                    <li><a asp-controller="contact" asp-action="index">contact</a></li>
                </ul>
            </div>


        </div>


        <div class="center_content">
            <div class="left_content">

               @RenderBody()

            </div>
            <!--end of left content-->

            <div class="right_content">
